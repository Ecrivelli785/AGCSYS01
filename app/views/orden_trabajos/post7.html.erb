
<div class="d-flex justify-content-around bg-primary sticky-top my-3">
      <div class="">
        <h1 class="mt-1 "><strong>TRABAJOS   PROXIMOS   A   VENCER</strong></h1>
      </div>
</div>


 <div class=" block-center mx-5">
      <table class="table table-striped">
      <thead>
        <tr class="bg-dark">
          <th><h4 class="font-weight-bold text-white">OT</h4></th>
          <th><h4 class="font-weight-bold text-white">Cliente</h4></th>
          <th><h4 class="font-weight-bold text-white">Producto</h4></th>
          <th><h4 class="font-weight-bold text-white">Observación</h4></th>
          <th><h4 class="font-weight-bold text-white"> Fecha límite</h4></th>

        </tr>
      </thead>
      <tbody>
    <% @orden_trabajos.limit(30).each do |orden_trabajo| %>
          <tr>

        <% if orden_trabajo.priority == "Alta" %>
                <td style="background-color: #FF0000"> <strong><%= orden_trabajo.trnum %> </strong>  </td>
              <% elsif orden_trabajo.priority == "Media"  %>
                <td  style="background-color:#FFFF00"> <strong><%= orden_trabajo.trnum %> </strong>  </td>
              <% else orden_trabajo.priority == "Baja" %>
                <td  style="background-color:#7CFC00"> <strong><%= orden_trabajo.trnum %> </strong>  </td>
            <% end %>
            <td><strong><%= orden_trabajo.clinom %></strong></td>
            <td><%= orden_trabajo.nomprod.first(20) %></td>
            <td><%= truncate(orden_trabajo.observaciones, :length => 50)%></td>
            <td><strong><%= orden_trabajo.deadline %> </strong></td>
            <td>
        <% end %>
        </tr>
      </tbody>
    </table>
  </div>

